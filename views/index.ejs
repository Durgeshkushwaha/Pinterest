<% include ./partials/header.ejs %>
  <div
    class="w-full h-screen bg-center bg-cover bg-[url(https://i.pinimg.com/564x/5c/31/41/5c314164d3489fcea0be257172610632.jpg)] flex items-center justify-center">
    <div class="w-[25vw] shadow-[0_35px_60px_-15px_rgba(0,0,0,0.99)]    px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl mb-5 text-center font-semibold text-zinc-900 tracking-tighter capitalize leading-none">Welcome
        to
        Pinterest</h1>

      <form action="/login" method="post">
        <input class="border-2 border-zinc-200 rounded-md mt-2 w-full px-3 py-2 hover:border-zinc-500" type="text" name="username" placeholder="username">
        <input class="border-2 border-zinc-200 rounded-md mt-2 w-full px-3 py-2 hover:border-zinc-500" type="text" name="password" placeholder="password">
        <a class="mt-2 font-semibold text-zinc-600 inline-block" href="#">Forgot password?</a>
        <input class="border-2 rounded-full hover:border-black mt-2 w-full px-3 py-2 bg-blue-400 hover:bg-blue-500 text-white rounded-full cursor-pointer"
          type="submit" value="Log in">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to
          Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy. Notice at
          collection.</p>
      </form>
      <a class="inline-block mt-7 text-lg font-semibold text-zinc-800 text-center w-full hover:underline" href="/register">Don't have a
        account? Create New</a>
    </div>
  </div>
  <% include ./partials/footer.ejs %>