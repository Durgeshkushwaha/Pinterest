<% include ./partials/header.ejs %>
    <div
        class="w-full h-screen bg-center bg-cover bg-[url(https://i.pinimg.com/564x/7a/2f/5c/7a2f5c4ebcf3980af69c0041f5c152f9.jpg)] flex items-center justify-center">
        <div class="w-[25vw] border- px-20 py-10 shadow-[0_35px_60px_-15px_rgba(0,0,0,0.99)] rounded-[30px]">
            <h1
                class="text-3xl mb-10 text-center font-semibold bg-white tracking-tighter capitalize leading-none text-black px-3 py-2 rounded-lg ">
                create
                new
                account</h1>

            <form action="/register" method="post">
                <input class="border-2 rounded-md mt-2 w-full px-3 py-2 hover:border-zinc-700" type="text" name="username"
                    placeholder="username">
                    <input class="border-2 rounded-md mt-2 w-full px-3 py-2 hover:border-zinc-700" type="text" name="fullname"
                    placeholder="fullname">
                <input class="border-2 rounded-md mt-2 w-full px-3 py-2 hover:border-zinc-700" type="email" name="email" placeholder="email">
                <input class="border-2 rounded-md mt-2 w-full px-3 py-2 hover:border-zinc-700" type="number" name="contact"
                    placeholder="contact">
                <input class="border-2 rounded-md mt-2 w-full px-3 py-2 hover:border-zinc-700" type="text" name="password"
                    placeholder="password">
                <!-- <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forgot password?</a> -->
                <input
                    class="border-2 rounded-full mt-5 w-full px-3 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-full cursor-pointer"
                    type="submit" value="Create New Account">
                <p class="text-xs font-semibold text-black mt-7 w-3/4 mx-auto text-center">By continuing, you agree
                    to
                    Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy.
                    Notice at
                    collection.</p>
            </form>
            <a class="inline-block mt-7 text-lg font-semibold text-black text-center w-full hover:underline" href="/">Already have an account? Login</a>
        </div>
    </div>
