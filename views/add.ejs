<% include ./partials/header.ejs %>
    <div class="min-h-screen bg-zinc-700 px-10 py-5 text-white">
        <h1 class="text-xl font-semibold">Create a New Post.</h1>
        <hr class="opacity-100 mt-3">
        <form class="mt-3" action="/createpost" method="post" enctype="multipart/form-data">
            <input class=" text-black block w-1/3 px-3 py-2  mt-2 rounded-md" type="file" name="postimage">
            <input class=" text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Title"
                name="title">
            <textarea class=" text-black block w-1/3 h-60 px-3 py-2 border-2 mt-2 rounded-md" type="text"
                placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-3 py-2 bg-red-700 hover:bg-red-600 cursor-pointer mt-2 rounded-md"
                type="submit" value="Create post">
        </form>
    </div>
    <% include ./partials/footer.ejs %>